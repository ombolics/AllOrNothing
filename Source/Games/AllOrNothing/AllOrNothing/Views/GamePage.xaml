<Page
    x:Class="AllOrNothing.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AllOrNothing.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dd="using:AllOrNothing.Services.DragAndDrop"
    xmlns:cc="using:AllOrNothing.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>

        <!--Round Settings -->
        <Grid Visibility="{x:Bind ViewModel.IsRoundSettingsVisible, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="0" x:Name="ScheduleList" Header="Körök beosztása" 
                      ScrollViewer.VerticalScrollMode="Auto"
                      ShowsScrollingPlaceholders="False"
                      IsItemClickEnabled="True"
                      CanReorderItems="True"
                      SelectionMode="Single"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="10,10,10,10"
                      Background="{ThemeResource GreyBrush}" CornerRadius="30">

                <dd:DragDropService.VisualConfiguration>
                    <dd:VisualDropConfiguration
                                    Caption="Csapattag áthelyezése"
                                    IsContentVisible="True"
                                    IsGlyphVisible="True"/>
                </dd:DragDropService.VisualConfiguration>

                <ListView.ItemTemplate>

                    <DataTemplate>

                        <ItemsControl ItemsSource="{Binding }">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <cc:WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource GreyBrush}" Margin="10,10,10,10" CornerRadius="5">
                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                            <Button Content="X" VerticalAlignment="Center" Command="{Binding RemoveCommand}" CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Border>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!--<Grid Margin="10,25,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" AllowDrop ="True" 
                                        DataContext="{Binding Players[0].Name}">

                                    <Border  CanDrag="True">
                                        <TextBlock Text="{Binding Players[0].Name}"/>
                                    </Border>

                                    <Border>
                                        <TextBlock Text="{Binding Players[1].Name}"/>
                                    </Border>

                                    <Border>
                                        <TextBlock Text="{Binding Players[2].Name}"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <TextBox Background="DarkSeaGreen" Margin="10,10,10,10" Text="{Binding TeamName}"/>
                                </StackPanel>

                            </Grid>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                        
                    <StackPanel Grid.Column="0" CornerRadius="30" Background="{ThemeResource GreyBrush}" Margin="15,0,15,15" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                        <Border HorizontalAlignment="Stretch" Background="{ThemeResource SystemAccentColor}">
                            <TextBlock Text="Játékmódok" HorizontalAlignment="Stretch" Margin="20,0,10,3"/>
                        </Border>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Tematikus" Margin="20,10,10,5"/>
                            <TimePicker ClockIdentifier="24HourClock" Time="7:00"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Villám" Margin="20,5,10,5"/>
                            <TimePicker ClockIdentifier="24HourClock" Time="3:00"/>
                        </StackPanel>

                    </StackPanel>

                    <Button Grid.Column="1" Content="Indítás" FontSize="{ThemeResource LargeFontSize}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Margin="10,10,10,10" CornerRadius="10" Command="{x:Bind ViewModel.StartGameCommand}"/>

                </Grid>
                

                <StackPanel Grid.Row="1" CornerRadius="30" Background="{ThemeResource GreyBrush}" Margin="15,0,15,15" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                </StackPanel>
            </Grid>
        </Grid>

        
        
        <!-- Tematical-->
        <Grid x:Name="MainGrid" Visibility="{x:Bind ViewModel.IsTematicalVisible, Mode=OneWay}" Background="{ ThemeResource GradientBrush4}">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="1" Text="Kvíztábor 2022 13. forduló" FontSize="{StaticResource LargeFontSize}" Margin="10,10,10,10"/>

            <cc:QuestionGrid Grid.Column="0" Grid.Row="2" QuestionSerie="{x:Bind ViewModel.Serie}" CurrentQuestion="{x:Bind ViewModel.CurrentQuestion, Mode=TwoWay}"/>

            <Grid Grid.Column="2" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <cc:TeamScore Grid.Row="0" Grid.Column="0" Score="{x:Bind ViewModel.ScoreTest, Mode=TwoWay}" CurrentQuestion="{x:Bind ViewModel.CurrentQuestion, Mode=TwoWay}" />
                <cc:TeamScore Grid.Row="1" Grid.Column="0" />
                <cc:TeamScore Grid.Row="2" Grid.Column="0" />
                <cc:TeamScore Grid.Row="3" Grid.Column="0" />

                <cc:TeamScore Grid.Row="0" Grid.Column="1"/>
                <cc:TeamScore Grid.Row="1" Grid.Column="1"/>
                <cc:TeamScore Grid.Row="2" Grid.Column="1"/>
                <cc:TeamScore Grid.Row="3" Grid.Column="1"/>

            </Grid>

        </Grid>
    </Grid>
</Page>
