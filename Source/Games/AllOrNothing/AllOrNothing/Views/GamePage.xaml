<Page
    x:Class="AllOrNothing.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AllOrNothing.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dd="using:AllOrNothing.Services.DragAndDrop"
    xmlns:cc="using:AllOrNothing.Controls"
    xmlns:winui="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:conv="using:AllOrNothing.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Name="gamePage">

    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
        <conv:GamePhaseToVisibilityConverter x:Key="GamePhaseToVisibilityConverter"/>
    </Page.Resources>


    <Grid>
       
        <!-- Tematical-->
        <Grid x:Name="MainGrid" Background="{ ThemeResource GradientBrush4}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="1" Text="Kvíztábor 2022 13. forduló" FontSize="{StaticResource LargeFontSize}" Margin="10,10,10,10"/>

                    <Button Grid.Row="1" Grid.Column="1" 
                            Content="{x:Bind ViewModel.SelectedRound.TematicalTime, Mode=OneWay, Converter={StaticResource TimeSpanToStringConverter}}" 
                            CornerRadius="10" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Stretch" 
                            FontSize="{StaticResource LargeFontSize}"
                            Command="{x:Bind ViewModel.ToggleTimerCommand}"/>

                </Grid>

                <cc:QuestionGrid Grid.Row="2" Margin="15,15,15,15"
                             QuestionSerie="{x:Bind ViewModel.Serie}" 
                             CurrentQuestion="{x:Bind ViewModel.CurrentQuestion, Mode=TwoWay}"
                             CornerRadius="30"
                             Visibility="{x:Bind ViewModel.GamePhase, Converter={StaticResource GamePhaseToVisibilityConverter}, ConverterParameter=Tematical }"/>

            </Grid>

            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
               
                <ListBox Grid.Row="0" 
                          ItemsSource="{x:Bind ViewModel.CurrentStandings, Mode=OneWay}"

                          HorizontalContentAlignment="Stretch"
                          VerticalContentAlignment="Stretch"
 
                          Background="White"
                          CornerRadius="20">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <cc:TeamScore Standing="{Binding}" CurrentQuestion="{Binding ViewModel.CurrentQuestion, Mode=TwoWay, ElementName=gamePage}"
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment"  Value="Stretch"></Setter>
                            <Setter Property="VerticalContentAlignment"  Value="Stretch"></Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                
                <!--<cc:TeamScore Grid.Row="0" Grid.Column="0" Score="{x:Bind ViewModel.ScoreTest, Mode=TwoWay}" CurrentQuestion="{x:Bind ViewModel.CurrentQuestion, Mode=TwoWay}" />-->


                <Grid Grid.Row="1" Background="white" CornerRadius="20" Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Content="Nincs válasz" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    
                    <Grid Grid.Row="1" Margin="10,10,10,10" ColumnSpacing="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="V" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                Command="{x:Bind ViewModel.ShowLightningCommand}"
                                 Visibility="{x:Bind ViewModel.GamePhase, Converter={StaticResource GamePhaseToVisibilityConverter}, ConverterParameter=Tematical }"/>
                        <Button Grid.Column="1" Content="E" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>


                </Grid>
            </Grid>

        </Grid>
    </Grid>
</Page>
