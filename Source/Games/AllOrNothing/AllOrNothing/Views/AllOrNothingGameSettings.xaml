<Page
    x:Class="AllOrNothing.Views.AllOrNothingGameSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cc="using:AllOrNothing.Controls"
    xmlns:tK="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:dd="using:AllOrNothing.Services.DragAndDrop"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:con="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:conv="using:AllOrNothing.Converters"
    xmlns:local="using:AllOrNothing.Views"
    mc:Ignorable="d"
    Background="{ThemeResource GradientBrush5}"
    x:Name="gameSettingsPage"
    DataContext="{x:Bind ViewModel}">
    
    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:RoundStateToColorConverter x:Key="RoundStateToColorConverter"/>
    </Page.Resources>


    <ScrollViewer HorizontalScrollBarVisibility="Disabled" HorizontalScrollMode="Disabled">
        <Grid>
            
        
            <!--Game Settings -->
            <Grid Visibility="{x:Bind ViewModel.GameSettingsVisible, Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" MaxHeight="400" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!--Player adding area-->
                    <StackPanel Grid.Column="0" Orientation="Vertical" CornerRadius="30" Background="White" Margin="15,15,15,15"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                        <AutoSuggestBox PlaceholderText="Játékos keresése" QueryIcon="Find" Margin="15,15,15,15" 
                                        TextChanged="{x:Bind ViewModel.AutoSuggestBox_TextChanged}"
                                        SuggestionChosen="{x:Bind ViewModel.AutoSuggestBox_SuggestionChosen}"
                                        LostFocus="{x:Bind ViewModel.AutoSuggestBox_LostFocus}"
                                        Background="{ThemeResource GreyBrush}">
                            <AutoSuggestBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="30">
                                        <TextBlock Text="{Binding Name}"/>
                                        <TextBlock Text="{Binding Nickname}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </AutoSuggestBox.ItemTemplate>
                        </AutoSuggestBox>
                        
                        <!-- Player display area-->
                        <Border  Background="White" CornerRadius="30" Margin="15,15,15,15">
                            <ItemsControl ItemsSource="{x:Bind ViewModel.SelectedPlayers, Mode=OneWay}" AllowDrop="True" Background="Transparent">

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <cc:WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{ThemeResource GreyBrush}" Margin="10,10,10,10" CornerRadius="5">

                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                <Button Content="X" VerticalAlignment="Center" Command="{Binding RemoveCommand}" CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </Border>

                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                    </StackPanel>


                    <Grid Grid.Column="1" CornerRadius="30" Margin="15,15,15,15" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{ThemeResource GreyBrush}" 
                                        CornerRadius="30" Margin="15,15,15,15">
                                <Border HorizontalAlignment="Stretch" Background="{ThemeResource SystemAccentColor}">
                                    <TextBlock Text="Körökkel kapcsolatos adatok" HorizontalAlignment="Stretch" Margin="20,0,10,3"/>
                                </Border>

                                <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                                    <TextBox Text="{x:Bind ViewModel.GameModel.GameSettings.NumberOfRounds, Mode=TwoWay}"/>
                                    <TextBlock  Text="Kör döntő nélkül"/>
                                </StackPanel>
                                <CheckBox Content="Körök sorsolása" IsChecked="{x:Bind ViewModel.GameModel.GameSettings.GenerateSchedule, Mode=TwoWay}"/>
                                <CheckBox Content="Kérdéssor beállítása előre" IsChecked="{x:Bind ViewModel.GameModel.GameSettings.AssignSeriesForAllGame, Mode=TwoWay}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{ThemeResource GreyBrush}"
                                        CornerRadius="30" Margin="15,15,15,15">
                                
                                <Border HorizontalAlignment="Stretch" Background="{ThemeResource SystemAccentColor}">
                                    <TextBlock Text="Csapatokkal kapcsolatos adatok" HorizontalAlignment="Stretch" Margin="20,0,10,3"/>
                                </Border>

                                <!--<CheckBox Content="Csapatos játék" Margin="20,10,10,5" 
                                          IsChecked="{x:Bind ViewModel.GameSettingsModel.TeamsAllowed, Mode=TwoWay}"
                                          Checked="{x:Bind ViewModel.TeamsAllowedChecked}"/>-->

                                <StackPanel Orientation="Horizontal" Margin="50,5,10,5" >
                                    <TextBox Height="30" Text="{x:Bind ViewModel.GameModel.GameSettings.MaxTeamSize, Mode=TwoWay}" />
                                    <TextBlock  Text="maximális csaptalétszám"/>
                                </StackPanel>

                                <Button Content="Csapatok sorsolása" Margin="50,5,10,5" Command="{x:Bind ViewModel.GenerateTeamsCommand}"/>

                                <!--<CheckBox Content="Csapatok sorsolása" Margin="50,5,10,5" 
                                          IsChecked="{x:Bind ViewModel.GameSettingsModel.GenerateTeams, Mode=TwoWay}"
                                          IsEnabled="{x:Bind ViewModel.GameSettingsModel.TeamsAllowed, Mode=TwoWay}"/>-->
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="1" CornerRadius="30" Background="{ThemeResource GreyBrush}" Margin="15,0,15,15" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                            <Border HorizontalAlignment="Stretch" Background="{ThemeResource SystemAccentColor}">
                                <TextBlock Text="Játékmódok" HorizontalAlignment="Stretch" Margin="20,0,10,3"/>
                            </Border>

                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="Tematikus" Margin="20,10,10,5" 
                                          IsChecked="{x:Bind ViewModel.GameModel.GameSettings.IsTematicalAllowed, Mode=TwoWay}"/>
                                <TimePicker ClockIdentifier="24HourClock" Time="{x:Bind ViewModel.GameModel.GameSettings.GeneralTematicalTime, Mode=TwoWay}" 
                                            SelectedTime="7:00" 
                                            IsEnabled="{x:Bind ViewModel.GameModel.GameSettings.IsTematicalAllowed, Mode=TwoWay}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="Villám" Margin="20,5,10,5" IsChecked="{x:Bind ViewModel.GameModel.GameSettings.IsLightningAllowed, Mode=TwoWay}"/>
                                <TimePicker ClockIdentifier="24HourClock" Time="{x:Bind ViewModel.GameModel.GameSettings.GeneralLightningTime, Mode=TwoWay}" 
                                            SelectedTime="3:00"
                                            IsEnabled="{x:Bind ViewModel.GameModel.GameSettings.IsLightningAllowed, Mode=TwoWay}"/>
                            </StackPanel>

                            <CheckBox Content="Gombok nélüli játék" Margin="20,5,10,5" 
                                      IsChecked="{x:Bind ViewModel.GameModel.GameSettings.IsGameWithoutButtonsEnabled, Mode=TwoWay}"/>

                        </StackPanel>
                    </Grid>
                </Grid>

                <!--Teams-->
                <Border Name="teamsLayoutOuterBorder" Grid.Row="1" Background="White" CornerRadius="30" Margin="15,15,15,15">

                    <ItemsControl ItemsSource="{x:Bind ViewModel.Teams, Mode=OneWay}"   >
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <cc:WrapPanel>
                                                              
                                </cc:WrapPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Name="teamPanel" 
                                            Orientation="Vertical" 
                                            Spacing="5" Background="{ThemeResource GreyBrush}" 
                                            CornerRadius="30" Margin="10,10,10,10"
                                            AllowDrop="True">
                                    
                                    <dd:DragDropService.Configuration>
                                        <dd:DropConfiguration DropTextCommand="{Binding AddPlayerCommand}"/>
                                        
                                    </dd:DragDropService.Configuration>

                                    <TextBox Text="{Binding TeamName, Mode=TwoWay}" Margin="10,10,0,10" HorizontalAlignment="Center" />

                                    <ItemsControl ItemsSource="{Binding Players}" AllowDrop="True" Background="Transparent">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <cc:WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <cc:PlayerTextBlock 
                                                                    Player="{Binding}"
                                                                    Margin="10,10,10,10" 
                                                                    CanDrag="True" >

                                                    <dd:DragDropService.VisualConfiguration>
                                                        <dd:VisualDropConfiguration
                                                        Caption="Csapattag áthelyezése"
                                                        IsContentVisible="True"
                                                        IsGlyphVisible="False"/>
                                                    </dd:DragDropService.VisualConfiguration>

                                                    <dd:DragDropService.Configuration>
                                                        <dd:DropConfiguration                                                            
                                                            DropTextCommand="{Binding DropPlayerCommand}"/>
                                                    </dd:DragDropService.Configuration>

                                                </cc:PlayerTextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <Button Grid.Row="2"  Content="Tovább" FontSize="{ThemeResource LargeFontSize}" VerticalAlignment="Center"
                        HorizontalAlignment="Right" Command="{x:Bind ViewModel.ShowRoundSettingsCommand}"/>

            </Grid>

            <!--Round Settings -->
            <Grid Visibility="{x:Bind ViewModel.IsRoundSettingsVisible, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <ListView Grid.Column="0" x:Name="ScheduleList" Header="Körök beosztása" 
                          ItemsSource="{x:Bind ViewModel.Rounds, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedRound, Mode=OneWay}"
                          ScrollViewer.VerticalScrollMode="Auto"
                          ShowsScrollingPlaceholders="False"
                          IsItemClickEnabled="True"
                          CanReorderItems="True"
                          SelectionMode="Single"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          AllowDrop="True"
                          Margin="10,10,10,10"
                          Background="{ThemeResource GreyBrush}" CornerRadius="30"
                          ItemClick="{x:Bind ViewModel.RoundSelected}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="IsEnabled" 
                            Value="{Binding RoundEnded}"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding RoundEnded, Converter={StaticResource RoundStateToColorConverter}}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                
                                <ItemsControl ItemsSource="{Binding RoundSettings.Teams }" IsEnabled="{Binding RoundEnded}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <cc:WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{ThemeResource GreyBrush}" Margin="10,10,10,10" CornerRadius="5">
                                                <TextBlock Text="{Binding TeamName}"/>
                                            </Border>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                            
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    
                </ListView>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Gamemode related stuff-->
                        <StackPanel Grid.Column="0" CornerRadius="30" Background="{ThemeResource GreyBrush}" Margin="15,0,15,15" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                            <Border HorizontalAlignment="Stretch" Background="{ThemeResource SystemAccentColor}">
                                <TextBlock Text="Játékmódok" HorizontalAlignment="Stretch" Margin="20,0,10,3"/>
                            </Border>

                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="Tematikus" Margin="20,10,10,5" 
                                          IsChecked="{x:Bind ViewModel.SelectedRound.RoundSettings.IsTematicalAllowed, Mode=TwoWay}"
                                          />
                                <TimePicker ClockIdentifier="24HourClock" Time="7:00"
                                            IsEnabled="{x:Bind ViewModel.SelectedRound.RoundSettings.IsTematicalAllowed, Mode=TwoWay}"
                                            SelectedTime="{x:Bind ViewModel.SelectedRound.RoundSettings.TematicalTime, Mode=TwoWay}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="Villám" Margin="20,5,10,5" 
                                          IsChecked="{x:Bind ViewModel.SelectedRound.RoundSettings.IsLightningAllowed, Mode=TwoWay}"/>
                                <TimePicker ClockIdentifier="24HourClock"
                                            IsEnabled="{x:Bind ViewModel.SelectedRound.RoundSettings.IsLightningAllowed, Mode=TwoWay}"
                                            Time="3:00" SelectedTime="{x:Bind ViewModel.SelectedRound.RoundSettings.LightningTime, Mode=TwoWay}"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1" Content="Indítás" FontSize="{ThemeResource LargeFontSize}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                Margin="10,10,10,10" CornerRadius="10" Command="{x:Bind ViewModel.StartGameCommand}"/>

                    </Grid>


                    <StackPanel Grid.Row="1" CornerRadius="30" Background="{ThemeResource GreyBrush}" Margin="15,0,15,15" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Spacing="10">

                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <TextBlock Text="Kiválasztott kérdéssor"/>
                            <Button Content="Betöltés fájlból" Command="{x:Bind ViewModel.LoadFromFileCommand}"/>
                        </StackPanel>

                        <ScrollViewer>
                            <con:DataGrid 
                            ItemsSource="{x:Bind ViewModel.AvaibleSeries}"
                            AutoGenerateColumns="False"
                            SelectedItem="{x:Bind ViewModel.SelectedRound.RoundSettings.QuestionSerie, Mode=TwoWay}">
                                <con:DataGrid.Columns>
                                    <con:DataGridTextColumn Header="Id" Binding="{Binding Id}" Tag="Id" />

                                    <!-- AUTHORS -->
                                    <con:DataGridTemplateColumn Header="Szerzők" Tag="Author">
                                        <con:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ItemsControl ItemsSource="{Binding Authors}">

                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <cc:WrapPanel/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>

                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{ThemeResource GreyBrush}" Margin="10,10,10,10" CornerRadius="5">
                                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                            </Border>

                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </DataTemplate>
                                        </con:DataGridTemplateColumn.CellTemplate>

                                    </con:DataGridTemplateColumn>

                                    <!-- COMPETENCES -->
                                    <con:DataGridTemplateColumn Header="Ismeretkör" Tag="Competences">
                                        <con:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ItemsControl ItemsSource="{Binding Competences}" >

                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <cc:WrapPanel/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>

                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{ThemeResource GreyBrush}" Margin="10,10,10,10" CornerRadius="5">
                                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                            </Border>

                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </DataTemplate>
                                        </con:DataGridTemplateColumn.CellTemplate>

                                    </con:DataGridTemplateColumn>

                                    <con:DataGridTextColumn Header="Dátum" Binding="{Binding CreatedOn}" Tag="CreatedOn" />
                                </con:DataGrid.Columns>
                            </con:DataGrid>
                        </ScrollViewer>
                       
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>