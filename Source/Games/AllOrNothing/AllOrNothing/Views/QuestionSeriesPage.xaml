<Page
    x:Class="AllOrNothing.Views.QuestionSeriesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AllOrNothing.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:conv="using:AllOrNothing.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    Name="questionSeriePage">

    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style TargetType="TextBox">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MaxWidth" Value="600"/>
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource GradientBrush6 }">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- SearchBar + add button + list of series-->
        <StackPanel Orientation="Vertical"
                    Grid.Column="0"
                    Margin="10,10,10,10">

            <StackPanel Orientation="Horizontal" 
                        Spacing="8">
                <!--Implement some functionality-->
                <AutoSuggestBox PlaceholderText="Kérdéssor keresése..."
                            QueryIcon="Find"
                            Margin="10,10,10,10"/>

                <Button Content="Új kérdéssor"
                    FontSize="{ThemeResource MediumFontSize}"
                    Margin="10,10,10,10"
                    Command="{x:Bind ViewModel.NewSerieCommand}"/>
            </StackPanel>
            
            <ScrollViewer MaxHeight="500">
                <toolkit:DataGrid ItemsSource="{x:Bind ViewModel.AllSerie}"
                                          AutoGenerateColumns="False"
                                          SelectedItem="{x:Bind ViewModel.SelectedSerie, Mode=TwoWay}"
                                          IsReadOnly="True">

                    <toolkit:DataGrid.Columns>
                        <toolkit:DataGridTextColumn Header="Azonotsító" Binding="{Binding Id}" Tag="Id" />
                        <toolkit:DataGridTextColumn Header="Azonotsító" Binding="{Binding Name}" Tag="Id" />

                         <!--AUTHORS--> 
                        <toolkit:DataGridTemplateColumn Header="Szerzők" Tag="Author">
                            <toolkit:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding Authors}">

                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <toolkit:WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{ThemeResource GreyBrush}" Margin="10,10,10,10" CornerRadius="5">
                                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                </Border>

                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </toolkit:DataGridTemplateColumn.CellTemplate>

                        </toolkit:DataGridTemplateColumn>

                         <!--COMPETENCES--> 
                        <toolkit:DataGridTemplateColumn Header="Ismeretkör" Tag="Competences">
                            <toolkit:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border>
                                        <ItemsControl ItemsSource="{Binding Competences}">

                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <toolkit:WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{ThemeResource GreyBrush}" Margin="10,10,10,10" CornerRadius="5">
                                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                    </Border>

                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                </DataTemplate>
                            </toolkit:DataGridTemplateColumn.CellTemplate>

                        </toolkit:DataGridTemplateColumn>

                        <toolkit:DataGridTextColumn Header="Dátum" Binding="{Binding CreatedOn}" Tag="CreatedOn" />
                    </toolkit:DataGrid.Columns>

                </toolkit:DataGrid>
            </ScrollViewer>
        </StackPanel>

        <!-- Form area-->

        <ScrollViewer Grid.Column="1" Background="White" CornerRadius="30" Margin="10,10,10,10">
            <StackPanel Orientation="Vertical">
                <StackPanel>
                    <TextBlock Text="Név" Margin="10,10,10,10" 
                           FontSize="{ThemeResource MediumFontSize}"/>
                    <TextBox Text="{x:Bind ViewModel.EditingSerie.Name, Mode=OneWay}" 
                         Margin="10,10,10,10" FontSize="{ThemeResource MediumFontSize}" 
                         x:Name="serieNameTextbox"
                         TextChanged="{x:Bind ViewModel.EditingSerie.TextBoxChanged}"/>
                </StackPanel>

                <ItemsControl ItemsSource="{x:Bind ViewModel.EditingSerie.Topics, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Spacing="30"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Background="{ThemeResource GreyBrush}">
                                 <!--név-->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Név" 
                                           Margin="10,10,10,10" FontSize="{ThemeResource MediumFontSize}"/>
                                    <TextBox Text="{Binding Name}" 
                                         Margin="10,10,10,10" FontSize="{ThemeResource MediumFontSize}"
                                         x:Name="topicNameTextbox"
                                        />
                                    <!--TextChanged="{Binding TextBoxChanged}"-->
                                    <!--TextChanged="{Binding ViewModel.TextBoxChanged, ElementName=questionSeriePage}"-->
                                </StackPanel>
                                 <!--leírás-->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Leírás" 
                                       Margin="10,10,10,10" FontSize="{ThemeResource MediumFontSize}"/>
                                    <TextBox Text="{Binding Description}" 
                                         Margin="10,10,10,10" FontSize="{ThemeResource MediumFontSize}" 
                                         TextWrapping="Wrap"
                                         x:Name="topicDescriptionTextbox"/>
                                </StackPanel>
                                <!--szerző-->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Szerző" 
                                       Margin="10,10,10,10" FontSize="{ThemeResource MediumFontSize}"/>
                                    <TextBox Text="{Binding Author}" 
                                       Margin="10,10,10,10" FontSize="{ThemeResource MediumFontSize}" />

                                </StackPanel>
                                <!--kérdések-->
                                <TextBlock Text="Kérdések" FontSize="{ThemeResource LargeFontSize}"/>
                                
                                <ItemsControl ItemsSource="{Binding Questions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"  Background="DarkGray" CornerRadius="10" Padding="10,10,10,10"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical" Background="{ThemeResource GreyBrush}" CornerRadius="30">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Kérdés"  Margin="10,10,10,5" FontSize="{ThemeResource MediumFontSize}"/>
                                                    <TextBox Text="{Binding Text}" 
                                                             Margin="10,0,10,5" 
                                                             FontSize="{ThemeResource MediumFontSize}" 
                                                             TextWrapping="Wrap" 
                                                             MaxWidth="600"
                                                             
                                                             x:Name="questionTextBox"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Válasz"  Margin="10,0,10,5" FontSize="{ThemeResource MediumFontSize}"/>
                                                    <TextBox Text="{Binding Answer}" 
                                                             Margin="10,0,10,5" 
                                                             FontSize="{ThemeResource MediumFontSize}" 
                                                             TextWrapping="Wrap"
                                                             
                                                             x:Name="answerTextBox"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Érték"  Margin="10,0,10,5" FontSize="{ThemeResource MediumFontSize}"/>
                                                    <TextBox Text="{Binding Value}" 
                                                             Margin="10,0,10,5" 
                                                             FontSize="{ThemeResource MediumFontSize}"
                                                             
                                                             x:Name="valueTextBox"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <Button Content="Mentés"
                        Command="{x:Bind ViewModel.SaveCommand}"/>

                <Button Content="Játékos törlése"
                        Command="{x:Bind ViewModel.DeleteCommand}"/>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Page>
