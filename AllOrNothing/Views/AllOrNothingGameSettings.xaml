                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{ThemeResource GreyBrush}" 
                                    CornerRadius="30" Margin="15,15,15,15">
                            <Border HorizontalAlignment="Stretch" Background="{ThemeResource SystemAccentColor}">
                                <TextBlock Text="Körökkel kapcsolatos adatok" HorizontalAlignment="Stretch" Margin="20,0,10,3"/>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBox/>
                                <TextBlock  Text="Kör döntő nélkül"/>
                            </StackPanel>
                            <CheckBox Content="Körök sorsolása"/>
                            <CheckBox Content="Kérdéssor beállítása előre"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{ThemeResource GreyBrush}"
                                    CornerRadius="30" Margin="15,15,15,15">
                            <Border HorizontalAlignment="Stretch" Background="{ThemeResource SystemAccentColor}">
                                <TextBlock Text="Csapatokkal kapcsolatos adatok" HorizontalAlignment="Stretch" Margin="20,0,10,3"/>
                            </Border>

                            <CheckBox Content="Csapatos játék" Margin="20,10,10,5"/>

                            <StackPanel Orientation="Horizontal" Margin="50,5,10,5">
                                <TextBox Height="30"/>
                                <TextBlock  Text="Kör döntő nélkül"/>
                            </StackPanel>

                            <CheckBox Content="Csapatok sorsolása" Margin="50,5,10,5"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="1" CornerRadius="30" Background="{ThemeResource GreyBrush}" Margin="15,0,15,15" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        
                        <Border HorizontalAlignment="Stretch" Background="{ThemeResource SystemAccentColor}">
                            <TextBlock Text="Játékmódok" HorizontalAlignment="Stretch" Margin="20,0,10,3"/>
                        </Border>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Tematikus" Margin="20,10,10,5"/>
                            <TimePicker ClockIdentifier="24HourClock" Time="7:00"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Villám" Margin="20,5,10,5"/>
                            <TimePicker ClockIdentifier="24HourClock" Time="3:00"/>
                        </StackPanel>
                       
                    </StackPanel>
                </Grid>



            </Grid>

            <GridView Grid.Row="1" ItemsSource="{x:Bind ViewModel.TeamTest}" Background="White" CornerRadius="30" Margin="15,15,15,15">
                <GridView.ItemTemplate>
                    <DataTemplate>

                        <Grid Background="{ThemeResource GreyBrush}" RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0">
                                <TextBlock Text="{Binding TeamName}" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                            </Border>
                            
                            
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="10">
                                <TextBlock Text="{Binding Players[0].Name}"/>
                                <TextBlock Text="{Binding Players[1].Name}"/>
                            </StackPanel>
                            
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
