            <!--Round Settings -->
            <Grid Visibility="{x:Bind ViewModel.RoundSettingsVisible, Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="0" Background="DarkGray">
                    <TextBlock Text="Kör beállításai"/>
                </Border>
                <Button Grid.Row="1" Grid.Column="2" Content="Játszma beállításai" VerticalAlignment="Center"
                    HorizontalAlignment="Right" Command="{x:Bind ViewModel.ShowGameSettingsCommand}"/>

                <Button Grid.Row="2" Grid.Column="2" Content="Tematikus betöltése" VerticalAlignment="Center"
                    HorizontalAlignment="Right" Command="{x:Bind ViewModel.StartGameCommand}"/>


                <StackPanel Grid.Column="1" Grid.Row="1" Background="{ThemeResource DarkGreenBrush}" CornerRadius="30" 
                            Orientation="Vertical" Margin="10,10,10,10">

                    <TextBlock Text="Játékelemek" FontSize="{StaticResource LargeFontSize}" Margin="10,10,10,30"/>

                    <CheckBox Content="Tematikus játék" Margin="15,10,10,10" Command="{x:Bind ViewModel.TematicalCheckBoxCommand}"/>

                    <StackPanel Orientation="Horizontal" Margin="10,10,10,10">


                        <NumberBox Header="Perc"
                                   IsEnabled="{x:Bind ViewModel.HasTematical, Mode=TwoWay}"
                                   Value="1"
                                   SpinButtonPlacementMode="Compact"
                                   SmallChange="1"
                                   LargeChange="1"/>


                        <NumberBox Header="Másodperc"
                                   IsEnabled="{x:Bind ViewModel.HasTematical, Mode=TwoWay}"
                                    Value="1"
                                   SpinButtonPlacementMode="Compact"
                                   SmallChange="10"
                                   LargeChange="10"/>

                    </StackPanel>

                    <CheckBox Content="Villám játék" Margin="15,10,10,10" Command="{x:Bind ViewModel.LightningCheckBoxCommand}"/>

                    <StackPanel Orientation="Horizontal" Margin="10,10,10,10">


                        <NumberBox Header="Perc"
                                   IsEnabled="{x:Bind ViewModel.HasLightning, Mode=TwoWay}"
                                   Value="1"
                                   SpinButtonPlacementMode="Compact"
                                   SmallChange="1"
                                   LargeChange="1"/>


                        <NumberBox Header="Másodperc"
                                   IsEnabled="{x:Bind ViewModel.HasLightning, Mode=TwoWay}"
                                   Value="1"
                                   SpinButtonPlacementMode="Compact"
